<% layout("layouts/boilerplate.ejs"); -%>

<body>
    <div class="container mb-3">
        <div class="row">
        <h1 class="col-6 offset-2">Create a New Listing</h1>
        <form method="post" action="/listings" class="col-8 offset-2 mb-3 needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Enter Title</label>
                <input type="text" id="title" name="listing[title]" placeholder="Add a catchy Title" class="form-control" required>
                <div class="valid-feedback">
                    Title Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Enter Description</label>
                <textarea type="text" id="description" rows="2" cols="50" name="listing[description]" class="form-control" required></textarea>
                <div class="invalid-feedback">
                    Describe your listing
                </div>
            <div class="mb-3">
                <label for="imageUrl" class="form-label">Upload Listing image</label>
                <input type="file" id="imageUrl" rows="2" cols="50" name="listing[image][url]" class="form-control">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Enter Price</label>
                    <input type="number" id="price" name="listing[price]" placeholder="Price" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter valid Price
                    </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Enter Country</label>
                    <input type="text" id="country" name="listing[country]" placeholder="India" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter country
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="location" class="form-label">Enter Location</label>
                    <input type="text" id="location" name="listing[location]" placeholder="jaipur, rajasthan" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter correct location
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="category" class="form-label">Choose category</label>
                    <select class="form-select" name="listing[category]" aria-label="Default select example">
                        <option value="trending">Trending</option>
                        <option value="rooms">Rooms</option>
                        <option value="beach">Beach</option>
                        <option value="mountains">Mountains</option>
                        <option value="iconic cities">Iconic Cities</option>
                        <option value="domes">Domes</option>
                        <option value="arctic">Arctic</option>
                        <option value="camping">Camping</option>
                        <option value="boats">Boats</option>
                    </select required>
                </div>
            </div>
            <button class="btn mt-3 add">Add</button>
        </form>
        </div>
    </div>
</body>
