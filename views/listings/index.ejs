<% layout("layouts/boilerplate.ejs"); -%>

<body>
    <div class="filters">
        <a class="filter" href="/listings/category/trending">
            <i class="fa-solid fa-fire"></i>
            <p>Trending</p>
        </a>
        <a class="filter" href="/listings/category/rooms">
            <i class="fa-solid fa-bed"></i>
            <p>Rooms</p>
        </a>
        <a class="filter" href="/listings/category/iconic cities">
            <div class="icons"><i class="fa-solid fa-mountain-city"></i></i></div>
            <p>Iconic Cities</p>
        </a>
        <a class="filter" href="/listings/category/mountains">
            <div class="icons"><i class="fa-solid fa-mountain"></i></i></div>
            <p>Mountains</p>
        </a>
        <a class="filter" href="/listings/category/arctic">
            <div class="icons"><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </a>
        <a class="filter" href="/listings/category/farms">
            <div class="icons"><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </a>
        <a class="filter" href="/listings/category/camping">
            <div class="icons"><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </a>
        <a class="filter" href="/listings/category/beach">
            <div class="icons"><i class="fa-solid fa-water"></i></div>
            <p>Beach</p>
        </a>
        <a class="filter" href="/listings/category/domes">
            <div class="icons"><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </a>
        <a class="filter" href="/listings/category/boats">
            <div class="icons"><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </a>

        <div class="taxes">
            <div class="form-check-reverse form-switch info_toggle">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
    <div class="container row">
    <% for(listing of listings){ %>
        <a href="/listings/<%= listing._id %>" class="col-lg-4 col-md-6">
        <div class="card listingCard">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listingImage">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b> <br>
                    &#x20B9;<%= listing.price.toLocaleString("en-IN") %> / night 
                    <i class="info-tax">&nbsp; +18% GST</i>
                    </p>
            </div>
        </div>
        </a>
    <% } %> 
    </div>
</body>


